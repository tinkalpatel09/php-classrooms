{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">User Profile</h1>
    </div>
</div>
<div class="container">
    <h5>ID: {{ user.id }}</h5>
    <h5>Username: {{ user.username }}</h5>
    <h5>Password: {{ user.password }}</h5>
    <img src="{{ '/uploads/' ~ user.image }}" width="300" height="300">
</div>
{% endblock %}
